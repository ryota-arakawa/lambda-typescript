{
  "name": "appsync-graphql-api",
  "version": "1.0.0",
  "description": "AppSync based API used to drive the customer console UI",
  "main": "index.js",
  "private": true,
  "keywords": [
    "aws",
    "appsync",
    "typescript"
  ],
  "author": "Mark Wolfe <mark@wolfe.id.au>",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.368.0",
    "bunyan": "^1.8.12",
    "v8-compile-cache": "^2.3.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "@types/aws-lambda": "^8.10.15",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.11",
    "graphql-schema-linter": "^0.1.6",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "ts-node": "^10.3.0",
    "typescript": "^3.2.1",
    "@types/webpack": "^5.28.0",
    "aws-sam-webpack-plugin": "^0.3.1",
    "prettier": "^2.4.1",
    "ts-loader": "^6.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "@aws/dynamodb-data-mapper": "^0.7.3",
    "@aws/dynamodb-data-mapper-annotations": "^0.7.3",
    "aws-xray-sdk-core": "^3.3.3",
    "lambda-log": "^3.0.1",
    "source-map-support": "^0.5.13"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/src/*.test.+(ts)"
    ]
  },
  "graphql-schema-linter": {
    "rules": [
      "defined-types-are-used",
      "enum-values-all-caps",
      "enum-values-sorted-alphabetically",
      "fields-are-camel-cased",
      "input-object-values-are-camel-cased",
      "relay-connection-types-spec",
      "relay-connection-arguments-spec",
      "types-are-capitalized"
    ]
  },
  "scripts": {
    "clean": "rm -rf dist/",
    "build:dev": "npm run clean && mkdir ./dist && cp package.json ./dist/package.json && webpack",
    "watch": "webpack-cli -w"
  }
}
